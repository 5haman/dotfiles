# some more ls aliases
alias ls='ls -x -p -A -o -L -q -h --color=always --group-directories-first --tabsize=4'
alias lt='ls -x -p -A -o -L -q -h -t --color=always --group-directories-first --tabsize=4'
alias screen='screen -U -D -R'
alias letsencrypt-manager='/opt/git/docker-letsencrypt-manager/letsencrypt-manager --no-update-check'
alias bash-reload='exec -l $SHELL'
